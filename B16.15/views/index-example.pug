    - var name = "Nguyễn Thanh Toàn";
    - var age = 28;
    - var htmllink = "<a href='http://youtube.com'>youtube.com</a>";
    p !{htmllink}
    div(class="info")
      h1= name
      h2= age

      h2 Xin chào #{name}

      
    //- Đây là comment không được biên dịch
    - 
      var infoUser = {
        name: "Nguyễn Thanh Toàn",
        age: 28,
      };

    div(class="info")
      p Họ tên: #{infoUser.name}
      p Tuổi: #{infoUser.age}
      if(infoUser.phone)
        p Số điện thoại: #{infoUser.phone}
      else
        p Tuổi: chưa có
    - var statusAccount = "initial";
    case statusAccount
      when "initial"
        p Chờ duyệt 
      when "active"
        p Đang hoạt động
      when "inactive"
        p Không hoạt động
      default 
        p không có

    -
      var listUser = [
        "Le Van A",
        "Nguyen Thi B",
        "Do Van C"
      ];

    ul 
      each item, index in listUser 
        li #{index + 1}: #{item}

    - var totalPage = 5;
    ul 
      - for (var i = 1; i <= totalPage; i++)
        li 
          a(href="#") #{i}